@using Tras.Core.Domain.Common

@model IEnumerable<Tras.Web.Models.Employee.DepartmentViewModel>

@{
    var pageAction =(AppConstant.PageAction) ViewBag.PageAction;
}
@Html.Partial("_TopComponent",viewData: new ViewDataDictionary()
{
    {"PageInfo", ViewBag.PageInfo}
})

<p class="pull-right">
    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentId })
            @Html.ActionLink("Details", "Details", new {id = item.DepartmentId})
            @Html.Button(" ", "Delete", new { @class = "btn btn-danger delete", data_itemid = item.DepartmentId })
            
        </td>
    </tr>
}

</table>
