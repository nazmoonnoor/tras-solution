@using Tras.Core.Domain.Common
@model Tras.Web.Models.Employee.BattalionProfileViewModel
@{
    var action = ViewBag.PageAction == AppConstant.PageAction.Edit ? "EditProfile" : "CreateProfile";
}

<div class="col-md-10">
   <form action="@action" method="POST" id="profile-form">
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.PersonId)

        <div class="row">
            <div class="col-sm-6 b-r">
                @Html.EditorContainerFor(m => m.FullName)
                @Html.EditorContainerFor(m => m.StationId, additionalViewData: new { selectList = ViewBag.Station })
                @Html.EditorContainerFor(m => m.Stdp1No)
                @Html.EditorContainerFor(m => m.GenderKey, additionalViewData: new { selectList = ViewBag.Gender })
                @Html.EditorContainerFor(m => m.JoiningDate)
            </div>
            <div class="col-sm-6">
                @Html.EditorContainerFor(m => m.PersonalNo)
                @Html.EditorContainerFor(m => m.RankId, additionalViewData: new { selectList = ViewBag.Rank })
                @Html.EditorContainerFor(m => m.Stdp1NoDate)
                @Html.EditorContainerFor(m => m.JobTypeKey, additionalViewData: new {selectList = ViewBag.JobType})
                @Html.EditorContainerFor(m => m.UnitId, additionalViewData: new { selectList = ViewBag.Unit })
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-check"></i>&nbsp;Save changes
            </button>
        </div>
    </form>
</div>