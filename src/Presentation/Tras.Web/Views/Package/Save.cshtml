@using Tras.Core.Domain.Common
@model Tras.Web.Models.Ration.PackageViewModel

@{
    var action = ViewBag.PageAction == AppConstant.PageAction.Edit ? "Package/Edit" : "Package/Create";
}
<div class="modal-dialog">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">

                <form action="@action" method="POST" id="package-form">
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.PackageId)
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            @Html.EditorContainerFor(m => m.PackageCode)
                            @Html.EditorContainerFor(m => m.SubHeadId, "DropDownList", additionalViewData: new { selectlist = ViewBag.RationSubHeads })
                        </div>
                    </div>
                        <div class="col-md-12 top-buffer">
                            <button type="button" class="btn btn-white btn-sm cancel">Cancel</button>&nbsp;&nbsp;
                            <button id="packageSave" type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-check"></i>&nbsp;Save changes
                            </button>
                        </div>
                    
                </form>

            </div>
        </div>
    </div>
</div>
<div class="bb-alert alert" style="display:none;">
    <span></span>
</div>



