@using Tras.Core.Domain.Common
@model Tras.Web.Models.Ration.RationSubHeadViewModel

@{
    var pageAction = (AppConstant.PageAction)ViewBag.PageAction;
}

@Html.Partial("_TopComponent", viewData: new ViewDataDictionary
{
    {"PageInfo", ViewBag.PageInfo}
})

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-8 no-left-pad">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.SubHeadId)

        @Html.EditorContainerFor(m => m.SubHeadName, additionalViewData: new { inputWidthType = AppConstant.InputWidthType.Large })
        @Html.EditorContainerFor(m => m.HeadId, "DropDownList", additionalViewData: new { selectlist = ViewBag.RationHeads })
        <div class="col-md-12 top-buffer">
            <input type="submit" value="Save" class="btn btn-primary" />&nbsp;&nbsp;
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>

    </div>
}
